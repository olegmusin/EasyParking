@model IEnumerable<ParkingAreaViewModel>

<div class="@Html.Raw(!Model.Any() ? "hidden" : "") ">
    <table id="parkingslist" class="table table-hover table-responsive ">
        <thead>
            <tr>
                <th class="ctrtxt">Label</th>
                <th class="ctrtxt">Town</th>
                <th class="ctrtxt">Address</th>
                <th class="ctrtxt">Size</th>
                <th class="ctrtxt">Places</th>
                <th class="ctrtxt">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var parking in Model)
            {
                <tr class="ctrtxt">
                    <td>@parking.Moniker</td>
                    <td>@parking.LocationCityTown</td>
                    <td>@parking.LocationAddress1</td>
                    <td>@parking.Places.Count</td>
                    <td>@parking.Places.Count(p => p.IsParkingAllowed)</td>
                    <td>
                        <a class="btn btn-success"
                           asp-action="Design"
                           asp-controller="Parking"
                           asp-route-moniker="@parking.Moniker">
                            Design Parking Area
                        </a>&nbsp;
                        <a class="btn btn-info"
                           asp-action="Work"
                           asp-controller="Parking"
                           asp-route-moniker="@parking.Moniker">
                         Working Page   
                        </a>
                    </td>
                </tr>
            }
    </table>

</div>